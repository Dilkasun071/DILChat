<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kasun.dilchat.StatusActivity">
    <include layout="@layout/app_bar_layout" android:id="@+id/status_app_bar"/>
    <EditText
        android:id="@+id/status_update"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:hint="Enter Status"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/status_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/status_update"
        android:layout_alignRight="@+id/status_update"
        android:layout_below="@+id/status_update"
        android:text="Status Change"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="169dp" />
</RelativeLayout>
